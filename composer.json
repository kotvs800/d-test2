{
  "name": "example-rep/example-client",
  "description": "HTTP library for example.com",
  "type": "library",
  "license": "MIT",
  "require": {
    "psr/http-message": "^1.0",
    "psr/http-client": "^1.0",
    "psr/http-factory": "^1.0",
    "ext-json": "*"
  },
  "require-dev": {
    "phpunit/phpunit": "^9.5"
  },
  "autoload": {
    "psr-4": {
      "ExampleClient\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Tests\\ExampleClient\\": "tests/"
    }
  },
  "scripts": {
    "phpunit": "php vendor/bin/phpunit tests/"
  }
}